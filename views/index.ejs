<%- include('./partials/html-head') %>
<link rel="stylesheet" href="../stylesheets/index.css">
<%- include('./partials/nav') %>

<main>
  <h1> <%= user ? `Hello ${user.profile.name}`  : "Welcome to MindLog. Please log in." %></h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
    <div>
      <h1>Welcome to MindLog</h1>
      <a href="/entries/new">
        <%- title === 'Add Entry' ? 'class="active"' : ''  %>
        <button>
          ADD ENTRY
      </button>
      </a>

      <a href="/entries/edit">
        <%- title === 'EDIT' ? 'class="active"' : ''  %>
        <button>
          EDIT
      </button>
      </a>

      <a href="/entries/delete">
        <%- title === 'Delete' ? 'class="active"' : ''  %>
        <button>
          DELETE
      </button>
      </a>

    </div>
    <p>Please see your entries below:</p>
  <% } %>
  <section>
  </section>                                    
</main>

<%- include('./partials/footer') %>
